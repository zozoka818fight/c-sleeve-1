<view class="container">
    <image class="img" src="{{data.img}}"></image>
    <view class="content-container">
        <text class="title">{{data.title}}</text>
        <view class="tags">
            <block wx:for="{{tags}}">
                <l-tag l-class="l-tag" size="super-mini" type="reading"  plain="{{true}}" >{{item}}</l-tag>
            </block>
        </view>
        <l-price deleted color="#157658" value="{{data.price}}"></l-price>
        <l-price color="#157658" value="{{data.discount_price}}"></l-price>
        <text class="subtitle">{{data.subtitle}}</text>
    </view>
</view>